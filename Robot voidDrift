void drift(double driftingSpeed, double distance, bool driftLeft) {
    // Set the drive velocity
    Drivetrain.setDriveVelocity(driftingSpeed, percent);

    // Convert distance to degrees for the drivetrain
    double targetDegrees = distance / (3.14159 * 4) * 360.0; // Assuming the wheel diameter is 4 inches

    // Calculate adjusted velocities for left and right motors
    double leftVelocity = driftLeft ? driftingSpeed * 0.8 : driftingSpeed; // Adjust left motor speed
    double rightVelocity = driftLeft ? driftingSpeed : driftingSpeed * 0.8; // Adjust right motor speed

    // Perform the drift until the target distance is reached
    LeftDriveSmart.spinFor(forward, targetDegrees, degrees, false).velocity(leftVelocity, percent);
    RightDriveSmart.spinFor(forward, targetDegrees, degrees, false).velocity(rightVelocity, percent);
}