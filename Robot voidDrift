void drift(double driftingSpeed, double distance, bool driftLeft) {
    // Set the drive velocity
    Drivetrain.setDriveVelocity(driftingSpeed, percent);

    // Convert distance to degrees for the drivetrain
    double targetDegrees = distance / (3.14159 * 4) * 360.0; // Assuming the wheel diameter is 4 inches

    // Perform the drift until the target distance is reached
    if (driftLeft) {
        LeftDriveSmart.spinFor(reverse, targetDegrees, degrees, false);
        RightDriveSmart.spinFor(forward, targetDegrees, degrees, false);
    } else {
        LeftDriveSmart.spinFor(forward, targetDegrees, degrees, false);
        RightDriveSmart.spinFor(reverse, targetDegrees, degrees, false);
    }
}